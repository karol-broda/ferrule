{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "out/**", ".tsbuildinfo"]
    },
    "@ferrule/grammar#build": {
      "outputs": []
    },
    "compile": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "out/**", ".tsbuildinfo"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "watch": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}

